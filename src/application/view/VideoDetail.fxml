<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.TilePane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.VideoDetailController">
   <center>
      <GridPane fx:id="fanartBackground" BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <GridPane>
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" percentWidth="3.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="34.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="60.0" />
                  <ColumnConstraints hgrow="SOMETIMES" percentWidth="3.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints maxHeight="-Infinity" percentHeight="5.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="-Infinity" percentHeight="100.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="-Infinity" percentHeight="5.0" vgrow="SOMETIMES" />
                  <RowConstraints />
              </rowConstraints>
               <children>
                  <GridPane GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints maxHeight="50.0" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label fx:id="title" styleClass="title" text="Label" GridPane.halignment="LEFT">
                           <font>
                              <Font size="22.0" />
                           </font>
                        </Label>
                        <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="plot" GridPane.rowIndex="1">
                           <content>
                              <TextFlow>
                                 <children>
                                    <Text fx:id="plot" boundsType="VISUAL" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="plot" text="Text" />
                                 </children>
                              </TextFlow>
                           </content>
                           <GridPane.margin>
                              <Insets top="15.0" />
                           </GridPane.margin>
                        </ScrollPane>
                        <VBox fx:id="playContainer" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="2" />
                     </children>
                  </GridPane>
                  <GridPane GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints />
                    </rowConstraints>
                     <children>
                        <VBox fx:id="posterContainer" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowSpan="2" GridPane.valignment="CENTER">
                           <GridPane.margin>
                              <Insets />
                           </GridPane.margin>
                           <children>
                              <ImageView fx:id="poster" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" styleClass="poster" />
                           </children>
                        </VBox>
                     </children>
                  </GridPane>
               </children>
               <styleClass>
                  <String fx:value="detail-content" />
                  <String fx:value="hover-fanart-background" />
               </styleClass>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </GridPane>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </GridPane>
   </center>
   <top>
       <ToolBar prefHeight="40.0" prefWidth="200.0" styleClass="background-menu" BorderPane.alignment="CENTER">
         <items>
            <Label fx:id="videoButton" text="Films">
               <styleClass>
                  <String fx:value="menu-action" />
                  <String fx:value="selected" />
               </styleClass>
            </Label>
            <Label fx:id="tvshowButton" styleClass="menu-action" text="Series" />
         </items>
       </ToolBar>
   </top>
</BorderPane>
